{% extends 'base.html.twig' %}

{% block title %}Hello ReviewController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>User Reviews ✉️</h1>

    <ul>
            <div class="my-3 p-3 bg-body rounded shadow-sm">
                <h6 class="border-bottom pb-2 mb-0">Recent reviews</h6>
                {% for user, review in userReviews %}
                {% if review.content is defined %}
                <div class="d-flex text-body-secondary pt-3">
                  <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
                  <p class="pb-3 mb-0 small lh-sm border-bottom">
                    <strong class="d-block text-gray-dark">{{ user }}</strong>

                    {{ review.content }}

                  </p>
                 </div>
               {% endif %}
                {% endfor %}
    </ul>
    </div>
  </div>

<div class = "row justify-content-center" style = "margin-left: 450px; margin-top: -15px">
<div class = "col-md-4 ">

{{ form_start(form) }}

{{ form_end(form) }}
</div>
</div>
{% endblock %}